<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Pressure">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Atmospheric pressure Value"/>
        <EditText
            android:id="@+id/PValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= " hPa (millibar)"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Value"/>
        <EditText
            android:id="@+id/PMinValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Min Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Value"/>

        <EditText
            android:id="@+id/PMaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Max Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Value"/>

        <EditText
            android:id="@+id/PAvgValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Avg Value"/>
    </LinearLayout>


</LinearLayout>