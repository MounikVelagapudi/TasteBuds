<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/light">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambient light level Value"/>
        <EditText
            android:id="@+id/LIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Intensity Value"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Value"/>
        <EditText
            android:id="@+id/LMinValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Min Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Value"/>

    <EditText
        android:id="@+id/LMaxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Get Max Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Value"/>

    <EditText
        android:id="@+id/LAvgValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Get Avg Value"/>
    </LinearLayout>


</LinearLayout>