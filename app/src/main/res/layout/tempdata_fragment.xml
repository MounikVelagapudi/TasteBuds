<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Temp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambient Temperature"/>
        <EditText
            android:id="@+id/TValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "degree Celsius"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Value"/>
        <EditText
            android:id="@+id/TMinValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Min Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Value"/>

        <EditText
            android:id="@+id/TMaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Max Value"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Value"/>

        <EditText
            android:id="@+id/TAvgValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint= "Get Avg Value"/>
    </LinearLayout>


</LinearLayout>